{
  "permissions": {
    "allow": [
      "*",
      "Bash(ls:*)"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf ~/*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fdx)",
      "Bash(git branch -D main)",
      "Bash(git branch -D master)",
      "Bash(npm publish:*)",
      "Bash(npx publish:*)",
      "Bash(docker system prune:*)",
      "Bash(docker rm:*)",
      "Bash(kubectl delete:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(systemctl stop:*)",
      "Bash(systemctl disable:*)",
      "Bash(service stop:*)"
    ],
    "defaultMode": "dontAsk"
  }
}
